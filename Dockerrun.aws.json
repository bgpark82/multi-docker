{
	"AWSEBDockerrunVersion": 2,
	"containerDefinitions":[
		{
			"name": "client",
			"image": "bgpark82/multi-client",
			"hostname": "client",
			"essential": false
   	    },
		{
			"name": "server",
			"image": "bgpark82/multi-server",
			"hostname": "api",
			"essential": false
   	    },
		{
			"name": "worker",
			"image": "bgpark82/multi-worker",
			"hostname": "worker",
			"essential": false
   	    },
		{
			"name": "nginx",
			"image": "bgpark82/multi-nginx",
			"hostname": "nginx",
			"essential": true,
			"portMappings":[
				{
					"hostPort": 80,
					"containerPort":80
				}
			],
			"link": ["client", "server"]
   	    }
	]
}